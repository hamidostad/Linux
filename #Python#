print(a)

# 2) enumerate function
word="Batman"
for items in word:
    print(items)
for a,b in enumerate(word):
    print(a)
    print(b)

# 3) zip function
list1=[1,2,3,4,5]
list2=["a","b","c","d","e"]
list3=[100,200,300]
zip(list1,list2)
for items in zip(list1,list2):
    print(items)
for a,b in zip(list1,list2):
    print(b)
for items in zip(list1,list2,list3):
    print(items)

