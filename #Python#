# String Formatting

# 1) .format method
print("My name is {}".format("Vijay"))
print("Colors are {} {} {}".format("Red","Green","Blue"))
print("Colors are {0} {1} {2}".format("Red","Green","Blue"))
print("Colors are {2} {0} {1}".format("Red","Green","Blue"))
print("Colors are {0} {0} {0}".format("Red","Green","Blue"))

print("Colors are {r} {g} {b}".format(r="Red",g="Green",b="Blue"))
print("Colors are {r} {r} {r}".format(r="Red",g="Green",b="Blue"))

# float formatting method (.format method)
# "{value:width.precisionf}"
pie=22/7
pie
print("value is {} ".format(pie))
print("value is {p} ".format(p=pie))
print("value is {p:1.2f} ".format(p=pie))
print("value is {p:10.4f} ".format(p=pie))

# 2) f-strings method (formatted string literals)
# Introduced in Python 3.6 and it is very new
name="Tom"
print("My name is {} ".format(name))
print(f"My name is {name} ")

name="Mark"
age=7
print("{} is {} years old".format(name,age))
print(f"{name} is {age} years old")

