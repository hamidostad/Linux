# Script for shutdown & restart system
import os
def offRestart():
	peirn("s for shutdown\n2 for restart\nEnter any key for exit: ")
	choice=input("enter your choice: ")

	if choice=="1":
		os.system("shutdown /s")
	elif choice=="2":
		os.system("shutdown /r")
	else:
		exit()

offRestart()

2.
#Calculator
def calculator():
    print("------------------")
    print("=== Calculator ===")
    print("------------------")
    print("1 For Addition \n2 For Subtraction \n3 For Multiplication \n4 For Division \n5 For Modulation")

    #Deleclaring variable for operation
    operation=input("Enter your Choice :")

    #Checking operation
    if operation!="1" and operation!="2" and operation!="3" and operation!="4" and operation!="5":
        print("Invalid Choice")
        exit()

    #Declaring variables for operations like addition subtraction etc
    num1=input("Enter your first number :")
    num2=input("Enter your second number :")

    convert1=int(num1)
    convert2=int(num2)

    #Checking and performing operations
    if operation=="1":
        formula=convert1+convert2
        print ("The result is :"+str(formula))
    elif operation=="2":
        formula = convert1 - convert2
        print ("The result is :" + str(formula))
    elif operation=="3":
        formula = convert1 * convert2
        print ("The result is :" + str(formula))
    elif operation=="4":
        formula = convert1 / convert2
        print ("The result is :" + str(formula))
    elif operation=="5":
        formula = convert1 % convert2
        print ("The result is :" + str(formula))


#Calling the function
calculator()

